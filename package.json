{
  "name": "bitcoindev",
  "version": "0.1.0",
  "description": "Bitcoin Education. Open knowledge. Open source.",
  "author": "Existenziell",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Existenziell/bitcoindev.git"
  },
  "homepage": "https://bitcoindev.info",
  "scripts": {
    "dev": "next dev",
    "start": "next start",
    "build": "next build",
    "prebuild": "node scripts/generate-md-content.js && node scripts/generate-glossary-data.js && node scripts/generate-search-index.js",
    "lint": "eslint .",
    "all": "concurrently \"npm run build\" \"npm run lint\" \"npm run test\" \"npm run generate:all\"",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e": "env -u NO_COLOR playwright test",
    "test:e2e:ui": "playwright test --ui",
    "check:links": "node scripts/check-links.js",
    "generate:md": "node scripts/generate-md-content.js",
    "generate:glossary": "node scripts/generate-glossary-data.js",
    "generate:search": "node scripts/generate-search-index.js",
    "generate:all": "npm run generate:md && npm run generate:glossary && npm run generate:search && npm run check:links"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@vercel/analytics": "^1.6.1",
    "@vercel/blob": "^0.25.1",
    "@vercel/speed-insights": "^1.3.1",
    "canvas-confetti": "^1.9.3",
    "d3-hierarchy": "^3.1.2",
    "d3-interpolate": "^3.0.1",
    "d3-scale": "^4.0.2",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-react": "^7.33.2",
    "next": "16.1.4",
    "next-themes": "^0.4.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-markdown": "^9.0.1",
    "rehype-highlight": "^7.0.0",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.0",
    "unist-util-visit": "^5.1.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^16.1.4",
    "concurrently": "^9.1.2",
    "@playwright/test": "^1.58.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/canvas-confetti": "^1.6.4",
    "@types/d3-hierarchy": "^3.1.7",
    "@types/d3-interpolate": "^3.0.4",
    "@types/d3-scale": "^4.0.9",
    "@types/node": "^20.19.30",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^2.1.9",
    "autoprefixer": "^10.4.23",
    "critters": "^0.0.23",
    "eslint": "^9",
    "eslint-config-next": "^16.1.4",
    "jsdom": "^27.4.0",
    "postcss": "^8.5.6",
    "remove-markdown": "^0.6.3",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.9.3",
    "vitest": "^2.1.0"
  }
}
